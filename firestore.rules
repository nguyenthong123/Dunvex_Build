rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper to check if user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Allow all authenticated users to read/write documents in these collections
    // We trust the application logic to filter data by ownerId on the client side
    // for now to resolve all immediate "Permission Denied" errors.
    
    match /users/{id} { allow read, write: if isSignedIn(); }
    match /settings/{id} { allow read, write: if isSignedIn(); }
    match /notifications/{id} { allow read, write: if isSignedIn(); }
    match /usage_limits/{id} { allow read, write: if isSignedIn(); }
    match /system_config/{id} { allow read: if isSignedIn(); allow write: if isSignedIn(); }
    
    // Primary business data
    match /products/{id} { allow read, write: if isSignedIn(); }
    match /orders/{id} { allow read, write: if isSignedIn(); }
    match /customers/{id} { allow read, write: if isSignedIn(); }
    match /debts/{id} { allow read, write: if isSignedIn(); }
    match /finance_transactions/{id} { allow read, write: if isSignedIn(); }
    match /checkins/{id} { allow read, write: if isSignedIn(); }
    
    // Supporting collections
    match /{collection}/{id} {
      allow read, write: if isSignedIn() && (
        collection in [
          'audit_logs', 'inventory_logs', 'payments', 'categories', 
          'coupons', 'attendance_logs', 'finance', 'debt_history', 
          'price_lists', 'payment_requests'
        ]
      );
    }

    // Allow recursive access for any other potential sub-collections
    match /{path=**} {
      allow read, write: if false; // Secure by default for unknown paths
    }
  }
}
